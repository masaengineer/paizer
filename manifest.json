{
  "manifest_version": 2,
  "name": "Paizer",
  "version": "1.0.1",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": ["https://paiza.jp/challenges/*"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://paiza.jp/challenges/*"],
      "js": ["content.js"]
    }
  ]
}
