{
  "manifest_version": 2,
  "name": "Paiza問題トラッカー",
  "version": "1.0",
  "description": "Paizaの問題を追跡し、復習を支援する拡張機能",
  "permissions": [
    "storage",
    "https://paiza.jp/*",
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://paiza.jp/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/paizer-favicon.png",
      "48": "icons/paizer-favicon.png",
      "128": "icons/paizer-favicon.png"
    }
  },
  "icons": {
    "16": "icons/paizer-favicon.png",
    "48": "icons/paizer-favicon.png",
    "128": "icons/paizer-favicon.png"
  }
}
